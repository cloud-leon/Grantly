# Django Settings
DJANGO_SECRET_KEY="django-insecure-example-key-for-development"
DJANGO_DEBUG=True

# Database Settings
USE_SQLITE=True
# PostgreSQL settings (if USE_SQLITE is False)
DB_NAME=scholarship_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Social Authentication Settings
GOOGLE_CLIENT_ID=your_google_client_id

# Apple Sign In Settings
APPLE_TEAM_ID=your_team_id
APPLE_KEY_ID=your_key_id
APPLE_PRIVATE_KEY_PATH=backend/credentials/AuthKey_XXXXX.p8
APPLE_BUNDLE_ID=com.yourapp.id
APPLE_SERVICE_ID=com.yourapp.service

# Twilio Settings
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Test Settings (for CI/CD)
PYTEST_RUNNING=False
GITHUB_ACTIONS=False 